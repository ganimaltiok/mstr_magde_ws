# Flask
FLASK_ENV=production
PORT=9101
SECRET_KEY=change-this-to-a-random-secret-key

# MSSQL
MSSQL_HOST=192.168.1.10
MSSQL_PORT=1433
MSSQL_DATABASE=operational_db
MSSQL_USER=api_user
MSSQL_PASSWORD=your_password
MSSQL_DRIVER=ODBC Driver 17 for SQL Server

# PostgreSQL DWH
PG_HOST=192.168.1.20
PG_PORT=5432
PG_DATABASE=data_warehouse
PG_USER=dwh_user
PG_PASSWORD=your_password

# MicroStrategy
MSTR_URL_API=http://mstr-server:8080/MicroStrategyLibrary/api
MSTR_USERNAME=api_service_account
MSTR_PASSWORD=mstr_password
MSTR_PROJECT=Production

# Nginx Cache Paths
NGINX_CACHE_SHORT=/var/cache/nginx/shortcache
NGINX_CACHE_DAILY=/var/cache/nginx/dailycache

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=prod

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/mstr_herald/app.log
